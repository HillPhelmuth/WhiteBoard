@page "/login-providers"

<h3 Class="text-center">Login</h3>

<div style="max-width: 600px; margin-left:auto; margin-right:auto">
    <ul>
        @foreach (var provider in providers)
        {
            string href = $"/.auth/login/{provider.Key}";
            <li>
                <div class="mat-elevation-z22" style="width: 100%; margin:5px">
                    <a class="btn btn-block btn-lg btn-social btn-@provider.Key" href="@href">
                        <span class="fa fa-@provider.Key"></span> Sign in with @provider.Value
                    </a>
                </div>
            </li>
        }
    </ul>
</div>
@code {

    private readonly Dictionary<string, string> providers = new()
    {
        { "github", "GitHub" },
        { "twitter", "Twitter" },
        { "facebook", "Facebook" },
        {"google", "Google"}
    };


}